<view>
	<view class="row">
		<label class="title">我的地址</label>
		<view class="info" bindtap="handleAddressClick">{{address}}</view>
		</view>
	<view class="row">
		<label class="title">类型</label>
		<view class="info">
			<radio-group bindchange="handleTypeChange">
			        <label>
			            <radio value="buy" checked="true"/>求购
						<radio value="sell"/>转让
			        </label>
			      </radio-group>
		</view>
		</view>
	<view class="row">
		<label class="title">说明</label>
		<view class="info">
			<input class="info-input" bindinput="handleMessageChange" placeholder="填写你的具体需求"/>
		</view>
	</view>
	<view class="row">
		<label class="title">联系方式</label>
		<view class="info">
			<input class="info-input" bindinput="handleContactChange" placeholder="填写你的联系方式"/>
		</view>
		</view>
</view>

